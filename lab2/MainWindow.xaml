<Window x:Class="lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab2"
        mc:Ignorable="d"
        Title="Images Information" Height="450" Width="800"
        FontSize="20">
    <Grid>
        <DataGrid Margin="30,74,30,10" AutoGenerateColumns="True" x:Name="InfoGrid" AlternatingRowBackground="AliceBlue" MinColumnWidth="125"/>
        <Button Content="Select folder" HorizontalAlignment="Center" Margin="0,29,0,0" VerticalAlignment="Top" Click="SelectFolder"/>

    </Grid>
</Window>
